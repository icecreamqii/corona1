settings =
{
	orientation =
	{
		default = "portrait", 
		supported = { "landscapeLeft", "landscapeRight", "portrait", "portraitUpsideDown" },
	},
	iphone =
	{
		plist =
		{
			UIApplicationExitsOnSuspend = true, -- uncomment to quit app on suspend
			UIStatusBarHidden = true,
			UILaunchStoryboardName = "LaunchScreen",
			CFBundleIconFiles =
			{
				"Icon-40.png",
				"Icon-58.png",
				"Icon-76.png",
				"Icon-80.png",
				"Icon-87.png",
				"Icon-120.png",
				"Icon-152.png",
				"Icon-167.png",
				"Icon-180.png",
			},
			CFBundleURLTypes =
			{
				{
					CFBundleURLSchemes=
					{
						"CoronaSystemEvent", "Corona2",
					}
				},
			},
		},
	},
	tvos =
    {
        plist =
        {
			UIApplicationExitsOnSuspend = true, -- quit app on suspend
        },
    },
	window =
	{
		suspendWhenMinimized = true,
		resizable = true,
		enableMaximizeButton = true,
		minViewWidth = 320,
		minViewHeight = 480,
		defaultViewWidth = 320,
		defaultViewHeight = 480,
		titleText =
		{
			default = "System Events",
		},
